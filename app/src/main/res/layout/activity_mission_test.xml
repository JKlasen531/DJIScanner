<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MissionTestActivity">

    <Button
        android:id="@+id/startMission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starte Mission" />

    <Button
        android:id="@+id/stopMission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startMission"
        android:text="Stoppe Mission" />

    <Button
        android:id="@+id/loadMission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stopMission"
        android:text="Lade Mission" />

    <Button
        android:id="@+id/uploadMission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loadMission"
        android:text="Upload Mission" />
</RelativeLayout>